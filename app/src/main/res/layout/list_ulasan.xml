<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/imgFotoProfilUlasan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_fotoprofil"
                tools:ignore="ContentDescription"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtNamaAkunUlasan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:text="@string/email_akun"
            android:textSize="12sp"
            android:textColor="@color/textKecil"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnHapusUlasan"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_hapus"/>

    </LinearLayout>

    <RatingBar
        android:id="@+id/ratingBarUlasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:rating="0.0"
        android:numStars="5"
        android:progressTint="@color/colorPrimary"
        android:progressBackgroundTint="@color/abuabu"
        style="?android:attr/ratingBarStyleSmall"/>

    <TextView
        android:id="@+id/txtIsiUlasan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:text="@string/isi_ulasan"
        android:textSize="12sp"
        android:textColor="@color/textKecil"
        android:justificationMode="inter_word"
        tools:targetApi="o"/>

    <TextView
        android:id="@+id/txtTanggalUlasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="end"
        android:text="@string/tanggal_ulasan"
        android:textSize="7sp"
        android:textColor="@color/textKecil"
        tools:ignore="SmallSp"/>

</LinearLayout>