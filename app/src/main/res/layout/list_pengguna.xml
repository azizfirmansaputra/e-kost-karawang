<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RLListPengguna"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/CIVListFotoPengguna"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_profil"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/CIVListFotoPengguna"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtListNamaPengguna"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="@string/pengguna"
                android:textSize="18sp"
                android:textColor="@color/textTebal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtListWaktuPesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginStart="10dp"
                android:text="@string/_00_00"
                android:textSize="10sp"
                android:textColor="@color/colorPrimary"
                android:maxLines="1"
                tools:ignore="SmallSp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtPesanTerakhir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/pesan"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"/>

    </LinearLayout>

</RelativeLayout>