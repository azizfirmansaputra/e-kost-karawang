<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/putih"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgKonfirmasiKost"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_fotoprofil"
                    tools:ignore="ContentDescription"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtKonfirmasiNamaKost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nama_kostan"
                        android:textSize="20sp"
                        android:textColor="@color/text"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtKonfirmasiHargaKost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rp_000_000"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtKonfirmasiSisaKamar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Sisa"
                        android:textSize="12sp"
                        android:textColor="@color/abuabu"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/abuabu"/>

            <LinearLayout
                android:id="@+id/LLKonfirmasiSewaKostPer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sewa_kost_per"
                    android:textSize="12sp"
                    android:textColor="@color/text"/>

                <RadioGroup
                    android:id="@+id/RGKonfirmasiSewaKost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/RBKonfirmasiSewaKostHari"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:padding="5dp"
                        android:background="@drawable/bg_radiobutton_selector"
                        android:button="@android:color/transparent"
                        android:text="@string/hari"
                        android:textColor="@color/color_button"/>

                    <RadioButton
                        android:id="@+id/RBKonfirmasiSewaKostBulan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:padding="5dp"
                        android:background="@drawable/bg_radiobutton_selector"
                        android:button="@android:color/transparent"
                        android:text="@string/bulan"
                        android:textColor="@color/color_button"/>

                    <RadioButton
                        android:id="@+id/RBKonfirmasiSewaKostTahun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@drawable/bg_radiobutton_selector"
                        android:button="@android:color/transparent"
                        android:text="@string/tahun"
                        android:textColor="@color/color_button"/>

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLKonfirmasiNamaKost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kamar_tersedia"
                    android:textSize="12sp"
                    android:textColor="@color/text"/>

                <RadioGroup
                    android:id="@+id/RGKonfirmasiNamaKamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnKonfirmasiPesanKamar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/bordirbutton"
                android:text="@string/konfirmasi"
                android:textColor="@color/putih"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>